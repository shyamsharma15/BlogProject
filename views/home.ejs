<%- include('./header.ejs') %>

  <!-- my slider -->

  <div id="carouselExampleCaptions" class="carousel slide cqrousel-fade" data-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
        aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
        aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
        aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="images/sliderimg2.jpg" width="1400px" height="400px" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h2>Publish your Passions , Your way</h2>
          <p>Technology news, Development and Trends</p>
          <button class="btn btn-danger">Technology</button>
          <button class="btn btn-primary">Nature</button>
          <button class="btn btn-success">Tech Fun</button>
        </div>
      </div>
      <div class="carousel-item">
        <img src="images/sliderimg3.jpg" width="1400px" height="400px" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h2>Welcome to InspireHub The best Inspiring Blog</h2>
          <p>Technology news, Development and Trends</p>
          <button class="btn btn-danger">Technology</button>
          <button class="btn btn-primary">Nature</button>
          <button class="btn btn-success">Tech Fun</button>
        </div>
      </div>
      <div class="carousel-item">
        <img src="images/sliderimg2.jpg" width="1400px" height="400px" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h2>Award winning Blog</h2>
          <p>Technology news, Development and Trends</p>
          <button class="btn btn-danger">Technology</button>
          <button class="btn btn-primary">Nature</button>
          <button class="btn btn-success">Tech Fun</button>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!-- middle section -->

  <div class="container">
    <div class="container">

      <div class="ourblogs">
        <h2 id="blogesid">Our Blogs</h2>
      </div>

      <!-- blog section -->
      <div class="container my-4 mx-80px">


        <% b.forEach((item)=>{ %>
          <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">


            <div class="col p-4 d-flex flex-column position-static">
              <strong class="d-inline-block mb-2 text-primary-emphasis">Blogs</strong>
              <h3 class="mb-0">
                <%= item.title %>
              </h3>
              <div class="mb-1 text-body-secondary"><span>
                  <%= item.createdAt.toLocaleDateString() %>
                </span></div>
              <p class="card-text mb-auto">
                <%= item.description.slice(0,120) %>
              </p>
              <a href="/blog-detail/<%= item._id %>" class="icon-link gap-1 icon-link-hover stretched-link">
                Continue reading
                <!-- <svg class="bi">
              <use xlink:href="#chevron-right"></use>
            </svg> -->
              </a>
            </div>
            <div class="col-auto d-lg-block">
              <img class="bd-placeholder-img" width="400" height="250" src="<%= item.image.url %>" alt="">
            </div>
          </div>


          <% }) %>






      </div>

    </div>
  </div>

  <%- include('./footer.ejs') %>